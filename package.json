{
  "name": "md-to-telegraph-action",
  "version": "1.1.0",
  "description": "GitHub Action to convert markdown files to Telegraph pages",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outfile dist/index.js --target node --format cjs --minify --sourcemap",
    "build:tsc": "tsc",
    "package": "bun run build",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare-release": "bun run build && git add dist/",
    "release": "bun run prepare-release && bun run test",
    "check-dist": "bun run build && git diff --exit-code dist/"
  },
  "packageManager": "bun@1.1.45",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyanxiao/md-to-telegraph-action.git"
  },
  "keywords": [
    "github-action",
    "markdown",
    "telegraph",
    "documentation"
  ],
  "author": "Cyan Xiao",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.6.0",
    "glob": "^10.3.10",
    "linkedom": "^0.18.12",
    "marked": "^9.1.6"
  },
  "devDependencies": {
    "@types/marked": "^5.0.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "nock": "^14.0.10",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  }
}
